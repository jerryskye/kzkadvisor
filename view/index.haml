:javascript
  $(function() {
    lel = {
      appendTo: '#menu',
      source: "#{Ramaze.options.prefix}/autocomplete",
      delay: 1000,
      select: function(event, ui) {
        $('input#' + event.target.id + '_lat').val(ui.item['coords'][0]);
        $('input#' + event.target.id + '_lng').val(ui.item['coords'][1]);
      }
    };

    $("#id_trip_from").autocomplete(lel);
    $("#id_trip_to").autocomplete(lel);

  });

